{
    "name": "xueron/pails",
    "type": "library",
    "description": "Pails (PhalconRails) is used to create a rails-like PHP app based on Phalcon.",
    "keywords": ["pails", "phalcon", "rails", "phinx", "php", "phalcon-rails"],
    "homepage": "https://pails.xueron.com",
    "license": "MIT",
    "authors": [{
        "name": "Xueron Nee",
        "email": "xueron@xueron.com",
        "homepage": "https://www.xueron.com",
        "role": "Developer"
    }],
    "require": {
        "php": ">=5.6",
        "ext-phalcon": "~2.0",
        "symfony/console": "~2.8|~3.0",
        "symfony/config": "~2.8|~3.0",
        "symfony/yaml": "~2.8|~3.0",
        "robmorgan/phinx": "v0.5.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^3.7|^4.0|^5.0"
    },
    "autoload": {
        "psr-4": {
            "Pails\\": "src/Pails"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\Pails\\": "tests/Pails"
        }
    },
    "bin": ["bin/pails"]
}
