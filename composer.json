{
  "name": "xueron/pails",
  "type": "library",
  "description": "Pails (PhalconRails) is used to create a rails-like PHP app based on Phalcon.",
  "keywords": [
    "pails",
    "phalcon",
    "rails",
    "phinx",
    "php",
    "phalcon-rails"
  ],
  "homepage": "https://pails.xueron.com",
  "license": "MIT",
  "authors": [
    {
      "name": "Xueron Nee",
      "email": "xueron@xueron.com",
      "homepage": "https://pails.xueron.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.0",
    "ext-phalcon": "~3.0",
    "robmorgan/phinx": "^0.6.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^3.7|^4.0|^5.0"
  },
  "autoload": {
    "psr-4": {
      "Pails\\": "src/Pails"
    },
    "files": [
      "src/Pails/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\Pails\\": "tests/Pails"
    }
  },
  "bin": [
    "bin/pails"
  ]
}
